@model ASPMVC.Models.Song

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Song</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { })
        <div>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { })
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.Name, "", new { })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Artist, htmlAttributes: new { })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Artist, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.Artist, "", new { })
            </div>
        </div>

        <div>
            @Html.DropDownListFor(
                  model => model.Genre,
                  ((IEnumerable<ASPMVC.Models.Genre>)ViewBag.Genres)
                  .Select(x => new SelectListItem() { Text = x.Name, Value = x.Id.ToString() }),
                  "Select a genre"
                 )
        </div>

        <div>
            <div>
                <input type="submit" value="Create" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
